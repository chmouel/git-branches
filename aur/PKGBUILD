pkgname=git-branches-git
pkgver=0.1.0.r0.g0000000
pkgrel=1
pkgdesc="Interactive Git branch browser with fzf integration and GitHub PR status (git HEAD)"
arch=('x86_64' 'aarch64')
url="https://github.com/chmouel/git-branches"
license=('Apache')
depends=('git' 'fzf' 'python' 'python-requests' 'python-click')
makedepends=('git' 'python-build' 'python-installer' 'python-wheel' 'python-setuptools' 'python-pip')
provides=('git-branches')
conflicts=('git-branches')
source=("git-branches::git+https://github.com/chmouel/git-branches.git")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/git-branches" || exit
  # Prefer tag-based version; ensure non-empty and sanitized
  _desc=$(git describe --tags --long 2>/dev/null || true)
  if [[ -n "${_desc}" ]]; then
    echo "${_desc#v}" | sed 's/-/./g'
  else
    echo "0.1.0.r$(git rev-list --count HEAD).g$(git rev-parse --short HEAD)"
  fi
}

build() {
  cd "${srcdir}/git-branches" || exit
  python -m build --wheel --no-isolation
}

package() {
  cd "${srcdir}/git-branches" || exit
  python -m installer --destdir="$pkgdir" dist/*.whl

  # Shell completions generated from Click CLI
  install -dm755 "$pkgdir/usr/share/bash-completion/completions"
  python -m git_branch_list.cli completion --shell bash \
    > "$pkgdir/usr/share/bash-completion/completions/git-branches"

  install -dm755 "$pkgdir/usr/share/zsh/site-functions"
  python -m git_branch_list.cli completion --shell zsh \
    > "$pkgdir/usr/share/zsh/site-functions/_git-branches"

  install -dm755 "$pkgdir/usr/share/fish/vendor_completions.d"
  python -m git_branch_list.cli completion --shell fish \
    > "$pkgdir/usr/share/fish/vendor_completions.d/git-branches.fish"

  # Docs
  install -Dm644 README.md "$pkgdir/usr/share/doc/${pkgname}/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/${pkgname}/LICENSE"
}
